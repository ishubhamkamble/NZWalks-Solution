@model IEnumerable<NZWalksUI.Models.DTO.RegionsDto>
@{
}

<h1 class="mt-3">Regions</h1>

<div class="d-flex justify-content-end">
    <a class="btn btn-light" asp-controller="Regions" asp-action="Add">Add Region</a>
</div>

<table class="mt-3 table table-bordered">
    <thead>
        <tr>
            <th>Code</th>
            <th>Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var region in Model)
        {
            <tr>
                <td>@region.Code</td>
                <td>@region.Name</td>
                <td>
                    <a asp-controller="Regions" asp-action="Edit" asp-route-id="@region.Id" class="btn btn-light">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
